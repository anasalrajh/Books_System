
@{Layout = null;}

<!DOCTYPE html>
<html>
<head>
    <script src="~/scripts/angular.min.js"></script>
    <script src="~/scripts/jquery-3.6.0.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/angular-ui/ui-bootstrap.min.js"></script>
